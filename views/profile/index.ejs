<%- include('../partials/navbar') %>

<main class="container mx-auto px-4 pt-20 pb-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Профіль користувача</h1>

    <% if (success && success.length > 0) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= success %>
      </div>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form action="/profile" method="POST" class="space-y-6">
      <div>
        <label for="username" class="block text-sm font-medium text-gray-700">Ім'я користувача</label>
        <input type="text" 
               name="username" 
               id="username" 
               value="<%= user.username %>"
               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" 
               name="email" 
               id="email" 
               value="<%= user.email %>"
               class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
      </div>

      <div class="text-sm text-gray-500">
        <p>Дата реєстрації: <%= new Date(user.created_at).toLocaleDateString('uk-UA') %></p>
      </div>

      <div>
        <button type="submit" 
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
          Оновити профіль
        </button>
      </div>
    </form>
  </div>
</main>

<%- include('../partials/footer') %> 