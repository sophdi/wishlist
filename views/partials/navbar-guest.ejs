<body class="bg-white min-h-screen flex flex-col">
  <header class="sticky top-0 z-50 bg-white border-b border-gray-100">
    <div class="w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center justify-between h-16">
        <a href="/" class="flex items-center">
          <span class="flex items-center gap-2 text-xl font-semibold text-purple-600">
            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-purple-600 shadow-sm">
              <i class="fa-solid fa-gift text-white text-lg"></i>
            </span>
            mriia
          </span>
        </a>
        <div class="flex items-center">
          <div class="hidden md:flex items-center space-x-2">
            <a href="/auth/register"
               class="flex items-center gap-2 px-4 py-2 rounded-lg text-gray-900 font-light hover:bg-purple-50 hover:text-purple-700 transition-colors">
              Зареєструватися
            </a>
            <a href="/auth/login"
               class="flex items-center gap-2 px-4 py-2 rounded-lg bg-purple-600 text-white font-medium hover:bg-purple-700 transition-colors">
              Увійти
            </a>
          </div>
          <button id="mobile-menu-toggle" class="md:hidden p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none"
            aria-label="Відкрити мобільне меню" aria-expanded="false" aria-controls="mobile-menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </nav>
    </div>
  </header>
  <!-- Mobile Menu -->
  <nav id="mobile-menu"
    class="fixed inset-0 z-[100] bg-white transform translate-x-full transition-transform duration-300 ease-out md:hidden"
    aria-label="Мобільна навігація">
    <div class="flex flex-col h-full">
      <!-- Mobile Header -->
      <div class="flex justify-between items-center p-6 border-b border-gray-100">
        <span class="text-xl font-semibold text-purple-600 flex items-center gap-2">
          <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-purple-600 shadow-sm">
            <i class="fa-solid fa-gift text-white text-lg"></i>
          </span>
          mriia
        </span>
        <button id="mobile-menu-close"
          class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none"
          aria-label="Закрити мобільне меню">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <!-- Навігація для гостей -->
      <div class="flex-1 overflow-y-auto">
        <nav class="py-2 px-2 space-y-1">
          <a href="/"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-900 font-medium hover:bg-purple-50 hover:text-purple-700 transition-colors">
            <i class="fa-solid fa-house text-purple-400"></i>
            Головна
          </a>
          <a href="/auth/register"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-900 font-medium hover:bg-purple-50 hover:text-purple-700 transition-colors">
            <i class="fa-solid fa-user-plus text-purple-400"></i>
            Зареєструватися
          </a>
          <a href="/auth/login"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-900 font-medium hover:bg-purple-50 hover:text-purple-700 transition-colors">
            <i class="fa-solid fa-arrow-right-to-bracket text-purple-400"></i>
            Увійти
          </a>
        </nav>
      </div>
    </div>
  </nav>
  <script src="/js/mobile-menu.js" defer></script>
</body>