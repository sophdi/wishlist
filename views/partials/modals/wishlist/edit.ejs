<!-- Edit Wishlist Modal -->
<div id="editWishlistModal" class="fixed inset-0 hidden z-50 flex items-center justify-center p-4">
  <div class="absolute inset-0" style="background-color: rgba(0,0,0,0.4);"></div>
  <div class="bg-white rounded-2xl w-full max-w-md relative z-10 shadow-lg">
    <div class="p-6 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-2xl font-bold text-gray-900">
        Редагувати список бажань
      </h2>
      <button onclick="closeEditWishlistModal()" class="text-gray-500 hover:text-gray-900">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>

    <form action="/wishlists/<%= wishlist.id %>/edit" method="POST" class="p-6 space-y-6">
      <div>
        <label for="title" class="block text-gray-700 font-medium mb-2">
          Назва
        </label>
        <input type="text" id="title" name="title" value="<%= wishlist.title %>"
          class="w-full border border-gray-300 rounded-lg py-3 px-4" required />
      </div>

      <div>
        <label for="description" class="block text-gray-700 font-medium mb-2">
          Опис (необов'язково)
        </label>
        <textarea id="description" name="description"
          class="w-full border border-gray-300 rounded-lg py-3 px-4 resize-none"
          rows="3"><%= wishlist.description || '' %></textarea>
      </div>

      <div class="flex justify-between gap-4 mt-8">
        <button type="button" onclick="openDeleteConfirmModal();"
          class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-5 rounded-lg transition">
          Видалити
        </button>
        <button type="submit"
          class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-6 rounded-lg transition">
          Зберегти
        </button>
      </div>
    </form>
  </div>
</div>