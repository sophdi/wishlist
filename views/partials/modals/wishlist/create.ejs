<!-- views/partials/modals/wishlist/create.ejs -->
<!-- Модальне вікно створення вішліста -->
<div id="createModal" class="fixed inset-0 hidden z-50 flex items-center justify-center p-4">
  <div class="absolute inset-0" style="background-color: rgba(0,0,0,0.4);"></div>
  <div class="bg-white rounded-2xl w-full max-w-md relative z-10">
    <div class="p-6 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-2xl font-bold text-gray-900">Створити вішліст</h2>
      <button onclick="closeCreateModal()" class="text-gray-500 hover:text-gray-900">
        <i class="fas fa-times text-xl"></i>
      </button>
    </div>
    <form action="/wishlists/create" method="POST" class="p-6 space-y-6">
      <div>
        <label for="createTitle" class="block text-gray-700 font-medium mb-2">Назва</label>
        <input type="text" id="createTitle" name="title" class="w-full border border-gray-300 rounded-lg py-3 px-4"
          placeholder="Назва вішліста" required />
      </div>
      <div>
        <label for="createDescription" class="block text-gray-700 font-medium mb-2">Опис (необов'язково)</label>
        <textarea id="createDescription" name="description"
          class="w-full border border-gray-300 rounded-lg py-3 px-4 resize-none" placeholder="Додай короткий опис..."
          rows="3"></textarea>
      </div>
      <div class="flex gap-4">
        <button type="button" onclick="closeCreateModal()"
          class="flex-1 bg-gray-200 text-gray-700 py-3 rounded-lg">Скасувати</button>
        <button type="submit" class="flex-1 bg-gray-900 text-white py-3 rounded-lg">Створити</button>
      </div>
    </form>
  </div>
</div>