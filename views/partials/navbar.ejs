<!-- views/partials/navbar -->

<body class="bg-white min-h-screen flex flex-col">
  <header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-100">
    <div class="container mx-auto px-4">
      <nav class="flex items-center justify-between h-16">
        <!-- Логотип -->
        <a href="/" class="flex items-center">
          <span class="text-xl font-bold text-black">mriia</span>
        </a>

        <!-- Навігаційні елементи -->
        <div class="flex items-center">
          <!-- Десктоп-навігація -->
          <div class="hidden md:flex items-center space-x-4">
            <% if (user) { %>
            <!-- Список бажань -->
            <a href="/wishlists" class="text-gray-600 hover:text-brand-primary">
              <i class="fas fa-list"></i>
            </a>

            <!-- Меню користувача -->
            <div class="relative group">
              <button id="user-menu-toggle" class="flex items-center focus:outline-none" aria-expanded="false"
                aria-controls="user-dropdown">
                <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center">
                  <i class="fas fa-user text-gray-600"></i>
                </div>
              </button>

              <!-- Випадаюче меню користувача -->
              <div id="user-dropdown"
                class="absolute right-0 top-full mt-2 w-40 bg-white border rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible group-focus-within:opacity-100 group-focus-within:visible transition-all duration-300">
                <div class="py-1">
                  <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                    Профіль
                  </a>
                  <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                    Вийти
                  </a>
                </div>
              </div>
            </div>
            <% } else { %>
            <!-- Кнопка входу -->
            <a href="/auth/login" class="bg-brand-text text-white px-4 py-2 rounded-lg text-sm">
              Увійти
            </a>
            <% } %>
          </div>

          <!-- Кнопка мобільного меню -->
          <button id="mobile-menu-toggle" class="md:hidden text-gray-600 focus:outline-none"
            aria-label="Відкрити мобільне меню" aria-expanded="false" aria-controls="mobile-menu">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
      </nav>
    </div>
  </header>

  <!-- Мобільне меню -->
  <nav id="mobile-menu"
    class="fixed inset-0 z-[100] bg-white transform translate-x-full transition-transform duration-300 ease-in-out md:hidden"
    aria-label="Мобільна навігація">
    <div class="container mx-auto px-4 py-6 h-full flex flex-col">
      <!-- Заголовок мобільного меню -->
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center space-x-2">
          <span class="text-xl font-bold text-black">mriia</span>
        </div>
        <button id="mobile-menu-close" class="text-gray-600 focus:outline-none" aria-label="Закрити мобільне меню">
          <i class="fas fa-times text-2xl"></i>
        </button>
      </div>

      <!-- Профіль користувача -->
      <% if (user) { %>
      <a href="/profile" class="block mb-8">
        <div class="flex items-center space-x-4 bg-gray-50 p-4 rounded-2xl">
          <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
            <i class="fas fa-user text-gray-600"></i>
          </div>
          <div class="flex-grow">
            <h2 class="text-xl font-bold text-gray-900">
              <%= user.username %>
            </h2>
            <p class="text-sm text-gray-600">Особистий кабінет</p>
          </div>
          <div>
            <i class="fas fa-chevron-right text-gray-400"></i>
          </div>
        </div>
      </a>
      <% } %>

      <!-- Навігаційне меню -->
      <div class="space-y-4 flex-grow">
        <% if (user) { %>
        <a href="/" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-home mr-4 text-xl"></i>
          <span class="text-lg">Головна</span>
        </a>
        <a href="/wishlists" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-list mr-4 text-xl"></i>
          <span class="text-lg">Мої списки</span>
        </a>
        <% } else { %>
        <a href="/" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-home mr-4 text-xl"></i>
          <span class="text-lg">Головна</span>
        </a>
        <a href="/auth/login" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-sign-in-alt mr-4 text-xl"></i>
          <span class="text-lg">Увійти</span>
        </a>
        <% } %>
      </div>

      <!-- Додаткові налаштування -->
      <% if (user) { %>
      <div class="space-y-4">
        <a href="/auth/logout" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-sign-out-alt mr-4 text-xl"></i>
          <span class="text-lg">Вийти</span>
        </a>
        <a href="#" id="delete-account" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-trash-alt mr-4 text-xl"></i>
          <span class="text-lg">Видалити акаунт</span>
        </a>
      </div>
      <% } %>
    </div>
  </nav>

  <script src="/js/mobile-menu.js" defer></script>
</body>