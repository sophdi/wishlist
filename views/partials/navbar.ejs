<body class="bg-white min-h-screen flex flex-col">
  <header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-100">
    <div class="container mx-auto px-4">
      <nav class="flex items-center justify-between h-16">
        <a href="/dashboard" class="flex items-center">
          <span class="text-xl font-bold text-black">mriia</span>
        </a>
        <div class="flex items-center">
          <div class="hidden md:flex items-center space-x-4">
            <a href="/wishlists" class="text-gray-600 hover:text-gray-900">Вішлісти</a>
            <a href="/profile" class="text-gray-600 hover:text-gray-900">Профіль</a>
            <a href="/auth/logout" class="bg-black text-white px-4 py-2 rounded-lg text-sm">Вийти</a>
          </div>
          <button id="mobile-menu-toggle" class="md:hidden text-gray-600 focus:outline-none" aria-label="Відкрити мобільне меню" aria-expanded="false" aria-controls="mobile-menu">
            <i class="fas fa-bars text-xl"></i>
          </button>
        </div>
      </nav>
    </div>
  </header>
  <nav id="mobile-menu" class="fixed inset-0 z-[100] bg-white transform translate-x-full transition-transform duration-300 ease-in-out md:hidden" aria-label="Мобільна навігація">
    <div class="container mx-auto px-4 py-6 h-full flex flex-col">
      <div class="flex justify-between items-center mb-8">
        <div class="flex items-center space-x-2">
          <span class="text-xl font-bold text-black">mriia</span>
        </div>
        <button id="mobile-menu-close" class="text-gray-600 focus:outline-none" aria-label="Закрити мобільне меню">
          <i class="fas fa-times text-2xl"></i>
        </button>
      </div>
      <div class="space-y-4 flex-grow">
        <a href="/dashboard" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-tachometer-alt mr-4 text-xl"></i>
          <span class="text-lg">Дашборд</span>
        </a>
        <a href="/wishlists" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-gift mr-4 text-xl"></i>
          <span class="text-lg">Вішлісти</span>
        </a>
        <a href="/profile" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-user mr-4 text-xl"></i>
          <span class="text-lg">Профіль</span>
        </a>
        <a href="/auth/logout" class="flex items-center w-full bg-gray-50 p-4 rounded-2xl hover:bg-gray-100">
          <i class="fas fa-sign-out-alt mr-4 text-xl"></i>
          <span class="text-lg">Вийти</span>
        </a>
      </div>
    </div>
  </nav>
  <script src="/js/mobile-menu.js" defer></script>
</body>