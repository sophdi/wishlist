<!-- views/404.ejs - 404 помилка -->
<!DOCTYPE html>
<html lang="uk">
<head>
  <%- include('./partials/head') %>
  <title>Список бажань не знайдено — 404</title>
  <meta name="description" content="Сторінка не знайдена. Можливо, цей список бажань видалено або його не існує.">
  <style>
    .centered-404 {
      min-height: 70vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    .wishlist-404-icon {
      width: 72px;
      height: 72px;
      margin-bottom: 1.5rem;
      display: block;
    }
    @media (max-width: 640px) {
      .centered-404 {
        min-height: 60vh;
        padding: 2rem 0;
      }
      .wishlist-404-icon {
        width: 56px;
        height: 56px;
      }
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('./partials/navbar') %>
  <main class="w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow">
    <div class="centered-404">
      <!-- Стильний wishlist icon -->
      <svg class="wishlist-404-icon" viewBox="0 0 64 64" fill="none" aria-hidden="true">
        <rect x="12" y="24" width="40" height="24" rx="6" fill="#f3e8ff" stroke="#a78bfa" stroke-width="2"/>
        <rect x="12" y="24" width="40" height="8" rx="3" fill="#f9a8d4" stroke="#a78bfa" stroke-width="2"/>
        <rect x="30" y="24" width="4" height="24" fill="#a78bfa"/>
        <path d="M32 24C28 16 16 16 20 24" stroke="#a78bfa" stroke-width="2" fill="none"/>
        <path d="M32 24C36 16 48 16 44 24" stroke="#a78bfa" stroke-width="2" fill="none"/>
        <ellipse cx="24" cy="18" rx="4" ry="2" fill="#f9a8d4" stroke="#a78bfa" stroke-width="1"/>
        <ellipse cx="40" cy="18" rx="4" ry="2" fill="#f9a8d4" stroke="#a78bfa" stroke-width="1"/>
        <circle cx="32" cy="20" r="2" fill="#a78bfa"/>
        <!-- Heart -->
        <path d="M32 38c2-3 8-3 8 2s-8 8-8 8-8-3-8-8 6-5 8-2z" fill="#f472b6" opacity="0.7"/>
      </svg>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">404 — Список бажань не знайдено</h1>
      <p class="text-gray-600 mb-6">
        Можливо, цей список бажань видалено, він приватний або ви помилилися адресою.<br>
        Але не засмучуйтесь — завжди можна створити новий!
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/" class="bg-violet-600 hover:bg-violet-700 text-white px-6 py-3 rounded-lg font-medium transition-colors" aria-label="На головну">
          На головну
        </a>
        <a href="/wishlists" class="bg-white hover:bg-gray-100 text-violet-700 border border-violet-200 px-6 py-3 rounded-lg font-medium transition-colors" aria-label="Створити новий список бажань">
          Створити список бажань
        </a>
      </div>
    </div>
  </main>
  <%- include('./partials/footer') %>
</body>
</html>
