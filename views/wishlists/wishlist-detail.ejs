<!-- views/wishlists/wishlist-detail.ejs -->
<!DOCTYPE html>
<html lang="uk">

<head>
  <%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col">
  <%- include('../partials/navbar') %>
  <main class="w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow">
    <%- include('../partials/alerts') %>

    <!-- Header Section -->
    <div class="mb-8">
      <!-- Title with Edit Button -->
      <div class="flex items-start justify-between mb-4">
        <h1 class="text-2xl font-semibold text-gray-900"><%= wishlist.title %></h1>

        <!-- Edit Button (замінено меню на кнопку "Редагувати" з іконкою) -->
        <button onclick="openEditWishlistModal()" class="flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-50 transition-colors font-medium text-gray-700">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Редагувати
        </button>
      </div>

      <!-- Description -->
      <% if (wishlist.description) { %>
      <p class="text-gray-600 mb-4"><%= wishlist.description %></p>
      <% } %>

      <!-- Stats -->
      <div class="text-sm text-gray-500 mb-2">
        <%= wishes.length %>
        <%= wishes.length % 10 === 1 && wishes.length % 100 !== 11 ? 'бажання' : (wishes.length % 10 >= 2 && wishes.length % 10 <= 4 && (wishes.length % 100 < 10 || wishes.length % 100 >= 20) ? 'бажання' : 'бажань') %>
      </div>
    </div>

    <!-- Filters & Search -->
    <div class="mb-6">
      <div class="flex flex-col sm:flex-row gap-4 sm:items-center sm:justify-between">
        <!-- Search -->
        <div class="relative flex-1 max-w-md">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input type="text" data-search="wishes" data-target="#wishesContainer" placeholder="Пошук бажань..."
            class="block w-full pl-10 pr-3 py-2 border border-gray-200 rounded-lg bg-white text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
        </div>

        <!-- Sort -->
        <div class="flex gap-3">
          <!-- Sort -->
          <form id="sortForm" method="get">
            <select name="sort" id="sortSelect">
              <option value="created_desc" <%= sort === 'created_desc' ? 'selected' : '' %>>Останні</option>
              <option value="title_asc" <%= sort === 'title_asc' ? 'selected' : '' %>>За назвою</option>
              <option value="price_asc" <%= sort === 'price_asc' ? 'selected' : '' %>>За ціною ↑</option>
              <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>За ціною ↓</option>
            </select>
          </form>
        </div>
      </div>
    </div>

    <!-- Content Area - Grid of Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      <!-- Картка додавання бажання -->
      <div>
        <button onclick="openCreateWishModal()"
          class="w-full h-80 bg-white border-2 border-dashed border-gray-200 rounded-xl hover:border-purple-400 hover:bg-purple-50 transition-all duration-200 flex flex-col items-center justify-center text-gray-500 hover:text-purple-600 group">
          <div
            class="w-16 h-16 bg-gray-100 group-hover:bg-purple-100 rounded-full flex items-center justify-center mb-4 transition-colors">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <div class="text-center">
            <div class="font-semibold text-lg mb-1">Додати нове бажання</div>
            <div class="text-sm text-gray-400">Створіть своє наступне бажання</div>
          </div>
        </button>
      </div>
      <!-- Всі бажання одним циклом -->
      <div id="wishesContainer" class="contents">
        <% wishes.forEach(wish => { %>
        <div class="relative group">
          <div class="absolute top-4 right-4 z-10">
            <button onclick="event.preventDefault(); event.stopPropagation(); toggleWishMenu('<%= wish.id %>')"
              class="p-2 text-gray-400 hover:text-purple-600 hover:bg-gray-100 rounded-lg transition-colors opacity-0 group-hover:opacity-100">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
              </svg>
            </button>
            <div id="wishMenu<%= wish.id %>"
              class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-100">
              <div class="py-1">
                <button onclick="openEditWishModal(
                  '<%= wish.id %>',
                  '<%- wish.title.replace(/'/g, '&#39;') %>',
                  '<%- (wish.description || '').replace(/'/g, '&#39;') %>',
                  '<%= wish.price || '' %>',
                  '<%= wish.currency || '' %>',
                  '<%= wish.priority || '' %>',
                  '<%= wish.link || '' %>'
                ); toggleWishMenu('<%= wish.id %>');"
                  class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-purple-50 flex items-center gap-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Редагувати
                </button>
                <!-- Додаємо кнопку "Виконати бажання" -->
                <button
                  onclick="openCompleteWishModal('<%= wish.id %>', '<%- wish.title.replace(/'/g, '&#39;') %>'); toggleWishMenu('<%= wish.id %>');"
                  class="w-full text-left px-4 py-2 text-sm text-green-700 hover:bg-green-50 flex items-center gap-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Виконати бажання
                </button>
                <button
                  onclick="openDeleteWishModal('/wishlists/<%= wishlist.id %>/wishes/<%= wish.id %>/delete'); toggleWishMenu('<%= wish.id %>');"
                  class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 flex items-center gap-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                  Видалити
                </button>
              </div>
            </div>
          </div>
          <a href="/wishlists/<%= wishlist.id %>/wishes/<%= wish.id %>" class="block">
            <div class="bg-white rounded-xl border border-gray-100 hover:shadow-md hover:border-purple-300 transition-all duration-200 h-80 flex flex-col justify-between relative overflow-hidden">
              <!-- Верхня частина: зображення, меню -->
              <div>
                <div class="w-full h-44 bg-gray-100 rounded-t-xl flex items-center justify-center overflow-hidden">
                  <% if (wish.image_url) { %>
                    <img src="<%= wish.image_url %>" alt="<%= wish.title %>"
                      class="w-full h-full object-cover rounded-t-xl"
                      loading="lazy">
                  <% } else { %>
                  <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <% } %>
                </div>
              </div>
              <!-- Нижня частина: назва, ціна, дата -->
              <div class="flex flex-col justify-end flex-grow p-4">
                <h3 class="text-base font-semibold text-gray-900 mb-0 line-clamp-2 mt-2"><%= wish.title %></h3>
                <div class="flex items-center justify-between mt-auto pt-2 border-t border-gray-100">
                  <% if (wish.price) { %>
                  <div class="font-semibold text-purple-600">
                    <%= Math.round(wish.price) %> <span class="text-xs"><%= wish.currency || 'UAH' %></span>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </main>

  <!-- Підключення модалок -->
  <%- include('../partials/modals/wishlist-modals') %>
  <%- include('../partials/modals/wish-modals') %>
  <%- include('../partials/footer') %>

  <script src="/js/modal-handlers.js"></script>
  <script src="/js/wishlist-view.js"></script>
  <!-- Перед закриваючим тегом body -->
  <script src="/js/wish-form-handler.js"></script>


  <script>
    // Меню для бажань і вішліста
    function toggleWishlistMenu() {
      const menu = document.getElementById('wishlistMenu');
      menu.classList.toggle('hidden');
    }
    function toggleWishMenu(wishId) {
      const menu = document.getElementById('wishMenu' + wishId);
      document.querySelectorAll('[id^="wishMenu"]').forEach(m => {
        if (m.id !== 'wishMenu' + wishId) m.classList.add('hidden');
      });
      menu.classList.toggle('hidden');
    }
    function restoreWish(wishId) {
      if (confirm('Відновити це бажання як активне?')) {
        window.location.href = `/wishlists/<%= wishlist.id %>/wishes/${wishId}/restore`;
      }
    }
    function deleteWish(wishId) {
      if (confirm('Ви впевнені, що хочете видалити це бажання?')) {
        window.location.href = `/wishlists/<%= wishlist.id %>/wishes/delete/${wishId}`;
      }
    }
    // Закриття меню при кліку поза ним
    document.addEventListener('click', function (event) {
      if (!event.target.closest('[id^="wishMenu"]') && !event.target.closest('button[onclick^="toggleWishMenu"]')) {
        document.querySelectorAll('[id^="wishMenu"]').forEach(menu => {
          menu.classList.add('hidden');
        });
      }
      const wishlistMenu = document.getElementById('wishlistMenu');
      const wishlistButton = event.target.closest('button[onclick="toggleWishlistMenu()"]');
      if (!wishlistButton && wishlistMenu && !wishlistMenu.contains(event.target)) {
        wishlistMenu.classList.add('hidden');
      }
    });

    // Сортування
    document.getElementById('sortSelect').addEventListener('change', async function () {
      const sort = this.value;
      const wishesContainer = document.getElementById('wishesContainer');
      const wishlistId = "<%= wishlist.id %>";

      wishesContainer.innerHTML = '<div class="col-span-full text-center py-10 text-gray-400">Завантаження...</div>';

      try {
        const res = await fetch(`/wishlists/${wishlistId}/wishes/json?sort=${encodeURIComponent(sort)}`);
        const data = await res.json();
        if (data.success) {
          wishesContainer.innerHTML = data.wishes
            .filter(w => w.status !== 'completed')
            .map(wish => `
          <div class="relative group">
            <a href="/wishlists/${wishlistId}/wishes/${wish.id}" class="block">
              <div class="bg-white rounded-xl border border-gray-100 hover:shadow-md transition-all duration-200 h-80 flex flex-col justify-between relative overflow-hidden">
                <div>
                  <div class="w-full h-44 bg-gray-100 rounded-t-xl flex items-center justify-center overflow-hidden">
                    ${wish.image_url ? `<img src="${wish.image_url}" alt="${wish.title}" class="w-full h-full object-cover rounded-t-xl">` : `
                      <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    `}
                  </div>
                </div>
                <div class="flex flex-col justify-end flex-grow p-4">
                  <h3 class="text-base font-semibold text-gray-900 mb-0 line-clamp-2 mt-2">${wish.title}</h3>
                  <div class="flex items-center justify-between mt-auto pt-2 border-t border-gray-100">
                    ${wish.price ? `<div class="font-semibold text-purple-600">${Math.round(wish.price)} <span class="text-xs">${wish.currency || 'UAH'}</span></div>` : ''}
                  </div>
                </div>
              </div>
            </a>
          </div>
        `).join('');
        } else {
          wishesContainer.innerHTML = '<div class="col-span-full text-center py-10 text-red-400">Помилка завантаження</div>';
        }
      } catch (e) {
        wishesContainer.innerHTML = '<div class="col-span-full text-center py-10 text-red-400">Помилка зʼєднання</div>';
      }
    });
  </script>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</body>

</html>