<!-- views/wishlists/wishlist-item.ejs -->
<!DOCTYPE html>
<html lang="uk">

<head>
  <%- include('../partials/head') %>
</head>

<body class="bg-white min-h-screen flex flex-col">
  <%- include('../partials/navbar') %>
  <main class="container mx-auto px-4 py-12 pt-24 flex-grow">
    <!-- Заголовок вішлиста -->
    <div class="max-w-7xl mx-auto">
      <section class="flex justify-between items-start mb-12">
        <div>
          <h1 class="text-4xl font-bold text-brand-text mb-2">
            <%= wishlist.title %>
          </h1>
          <% if (wishlist.description) { %>
          <p class="text-xl text-gray-600"><%= wishlist.description %></p>
          <% } %>
        </div>

        <div class="flex items-center gap-3">
          <button onclick="openEditWishlistModal()" class="text-gray-600 p-2">
            <i class="fas fa-edit"></i>
          </button>
          <button onclick="openCreateWishModal()"
            class="bg-brand-text text-white px-6 py-3 rounded-lg flex items-center gap-2">
            <i class="fas fa-plus"></i>
            Додати бажання
          </button>
        </div>
      </section>

      <!-- Сітка бажань -->
      <% if (wishes.length > 0) { %>
      <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% wishes.forEach(wish => { %>
        <div class="bg-white border border-gray-200 rounded-2xl p-6">
          <div class="inline-block mb-3">
            <span
              class="px-2 py-1 rounded-full text-xs font-medium <%= wish.priority === 'Високий' ? 'bg-red-100 text-red-800' : wish.priority === 'Середній' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
              <%= wish.priority %>
            </span>
          </div>

          <h3 class="text-xl font-semibold text-brand-text mb-3">
            <%= wish.title %>
          </h3>

          <p class="text-gray-600 mb-4 line-clamp-2">
            <%= wish.description || 'Без опису' %>
          </p>

          <div class="text-sm text-gray-500 space-y-2 mb-4">
            <% if (wish.target_date) { %>
            <div class="flex items-center gap-2">
              <i class="fas fa-calendar"></i>
              <span>
                До:
                <%= new Date(wish.target_date).toLocaleDateString('uk-UA') %>
              </span>
            </div>
            <% } %>
          </div>

          <% if (wish.link) { %>
          <a href="<%= wish.link %>" target="_blank"
            class="inline-flex items-center gap-2 text-brand-primary text-sm mb-4">
            <i class="fas fa-external-link-alt"></i>
            Переглянути
          </a>
          <% } %>

          <div class="flex justify-between items-center pt-4 border-t border-gray-100">
            <button
              onclick="openEditWishModal('<%= wish.id %>', '<%= wish.title %>', '<%= wish.description %>', '<%= wish.priority %>', '<%= wish.target_date %>', '<%= wish.link %>')"
              class="text-gray-600 p-2">
              <i class="fas fa-edit"></i>
            </button>
            <a href="#"
              onclick="openConfirmDeleteWishModal('/wishlists/<%= wishlist.id %>/wishes/delete/<%= wish.id %>')"
              class="text-red-600 p-2">
              <i class="fas fa-trash-alt"></i>
            </a>
          </div>
        </div>
        <% }) %>
      </section>
      <% } else { %>
      <!-- Порожній стан -->
      <section class="text-center bg-gray-50 rounded-2xl p-12">
        <div class="w-24 h-24 bg-brand-bg rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-star text-4xl text-brand-primary"></i>
        </div>
        <h2 class="text-2xl font-semibold text-brand-text mb-3">
          Ще немає бажань
        </h2>
        <p class="text-gray-600 mb-6">Додай своє перше бажання до списку</p>
        <button onclick="openCreateWishModal()" class="bg-brand-text text-white px-6 py-3 rounded-lg">
          Додати бажання
        </button>
      </section>
      <% } %>
    </div>

    <!-- Модальні вікна -->
    <%- include('../partials/wishlist-modals', { wishlist: wishlist }) %>

    <!-- Модальне вікно підтвердження видалення бажання -->
    <div id="confirmDeleteWishModal"
      class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-2xl w-full max-w-md text-center p-8">
        <div class="mb-4">
          <i class="fas fa-trash-alt text-3xl text-red-500"></i>
        </div>
        <h3 class="text-2xl font-semibold text-brand-text mb-4">
          Видалити бажання?
        </h3>
        <p class="text-gray-600 mb-6">
          Ви впевнені, що хочете видалити це бажання? Цю дію неможливо буде
          скасувати.
        </p>

        <div class="flex space-x-4">
          <button id="cancelDeleteWishBtn" class="flex-1 bg-gray-200 text-gray-700 py-3 rounded-lg">
            Скасувати
          </button>
          <a id="confirmDeleteWishBtn" href="" class="flex-1 bg-red-500 text-white py-3 rounded-lg">
            Видалити
          </a>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="/js/wishlist-modals.js"></script>
</body>

</html>