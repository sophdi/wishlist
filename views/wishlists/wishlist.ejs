<!-- views/wishlists/wishlist.ejs -->
<!DOCTYPE html>
<html lang="uk">

<head>
  <%- include('../partials/head') %>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col">
  <%- include('../partials/navbar') %>
  <main class="w-full max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow">
    <%- include('../partials/alerts') %>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl font-semibold text-gray-900 mb-6">Мої вішлісти</h1>

      <!-- Search and Actions -->
      <div class="flex flex-col sm:flex-row gap-4 sm:items-center sm:justify-between">
        <!-- Search -->
        <div class="relative flex-1 max-w-md">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input type="text" placeholder="Пошук по вішлістам"
            class="block w-full pl-10 pr-3 py-2 border border-gray-200 rounded-lg bg-white text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
            data-search="wishlists" data-target="#wishlistsGrid">
        </div>

        <!-- Create Button -->
        <button onclick="openCreateModal()"
          class="border border-purple-600 text-purple-600 hover:bg-purple-50 hover:border-purple-700 hover:text-purple-700 px-4 py-2 rounded-lg font-medium transition-colors text-sm whitespace-nowrap bg-white">
          Створити вішліст
        </button>
      </div>
    </div>

    <!-- Wishlists Grid -->
    <% if (wishlists.length > 0) { %>
    <div id="wishlistsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Create Card (повернуто класичний вигляд без градієнта і з фіолетовою рамкою) -->
      <div
        class="w-full h-32 bg-white border-2 border-dashed border-purple-200 rounded-xl flex flex-col items-center justify-center cursor-pointer hover:border-purple-400 hover:bg-purple-50 transition-all duration-200">
        <button onclick="openCreateModal()"
          class="flex flex-col items-center justify-center w-full h-full text-purple-600 hover:text-purple-700 focus:outline-none">
          <div class="w-10 h-10 bg-purple-200 rounded-full flex items-center justify-center mb-2 shadow">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <span class="font-semibold text-base">Створити новий вішліст</span>
        </button>
      </div>

      <!-- Wishlist Cards -->
      <% wishlists.forEach(wishlist => { %>
      <div class="relative group">
        <!-- Вся картка як посилання -->
        <a href="/wishlists/<%= wishlist.id %>" class="block group searchable-item">
          <div class="w-full h-36 bg-white rounded-xl border border-gray-100 hover:shadow-lg transition-all duration-200 p-4 flex items-center gap-4 cursor-pointer">
            <!-- Іконка -->
            <div class="flex-shrink-0 w-14 h-14 bg-purple-100 rounded-2xl flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="w-8 h-8 text-purple-500">
                <path fill="currentColor"
                  d="M190.5 68.8L225.3 128l-1.3 0-72 0c-22.1 0-40-17.9-40-40s17.9-40 40-40l2.2 0c14.9 0 28.8 7.9 36.3 20.8zM64 88c0 14.4 3.5 28 9.6 40L32 128c-17.7 0-32 14.3-32 32l0 64c0 17.7 14.3 32 32 32l448 0c17.7 0 32-14.3 32-32l0-64c0-17.7-14.3-32-32-32l-41.6 0c6.1-12 9.6-25.6 9.6-40c0-48.6-39.4-88-88-88l-2.2 0c-31.9 0-61.5 16.9-77.7 44.4L256 85.5l-24.1-41C215.7 16.9 186.1 0 154.2 0L152 0C103.4 0 64 39.4 64 88zm336 0c0 22.1-17.9 40-40 40l-72 0-1.3 0 34.8-59.2C329.1 55.9 342.9 48 357.8 48l2.2 0c22.1 0 40 17.9 40 40zM32 288l0 176c0 26.5 21.5 48 48 48l144 0 0-224L32 288zM288 512l144 0c26.5 0 48-21.5 48-48l0-176-192 0 0 224z"/>
              </svg>
            </div>
            <!-- Інформація -->
            <div class="flex flex-col justify-center flex-1 min-w-0">
              <h3 class="text-lg font-bold text-gray-900 break-words line-clamp-2 mb-1"><%= wishlist.title %></h3>
              <div class="flex items-center gap-2 mb-1">
                <span class="text-sm text-purple-600 font-medium">
                  <%= wishlist.wishes_count || 0 %> <%= (wishlist.wishes_count === 1) ? 'бажання' : 'бажань' %>
                </span>
              </div>
              <span class="text-xs text-gray-400">
                <% 
                      const created = new Date(wishlist.created_at);
                      const now = new Date();
                      created.setHours(0,0,0,0);
                      now.setHours(0,0,0,0);
                      let diffDays = Math.floor((now - created) / (1000 * 60 * 60 * 24));
                      if (diffDays < 0) diffDays = 0;
                    %>
                <%= diffDays === 0 ? 'сьогодні' : diffDays === 1 ? '1 день тому' : `${diffDays} днів тому` %>
              </span>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
    </div>

    <% } else { %>
    <!-- Empty State -->
    <div class="text-center py-20">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </div>
      <h2 class="text-xl font-semibold text-gray-900 mb-3">Створіть свій перший вішліст</h2>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">
        Почніть збирати свої мрії та бажання в організованих списках
      </p>
      <button onclick="openCreateModal()"
        class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
        Створити вішліст
      </button>
    </div>
    <% } %>
  </main>

  <!-- Підключення модалок для вішлістів -->
  <%- include('../partials/modals/wishlist-modals') %>
  <%- include('../partials/footer') %>

  <script src="/js/modal-handlers.js"></script>
  <script src="js/wishlist-view.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const searchInput = document.querySelector('[data-search="wishlists"]');
      const grid = document.querySelector(searchInput.dataset.target);

      let searchTimeout;
      searchInput.addEventListener('input', function () {
        clearTimeout(searchTimeout);
        const searchTerm = this.value.trim();

        searchTimeout = setTimeout(async () => {
          if (searchTerm.length < 2) {
            // Якщо запит короткий — показати всі
            document.querySelectorAll('.searchable-item').forEach(item => item.style.display = '');
            return;
          }
          try {
            const res = await fetch(`/wishlists/search?q=${encodeURIComponent(searchTerm)}`, {
              headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (data.success) {
              grid.innerHTML = data.wishlists.map(wishlist => `
                <div class="relative group">
                  <a href="/wishlists/${wishlist.id}" class="block group searchable-item">
                    <div class="w-full h-32 bg-white rounded-xl border border-gray-100 hover:shadow-lg transition-all duration-200 p-4 relative cursor-pointer">
                      <div class="flex flex-col justify-between h-full">
                        <div class="flex items-start justify-between">
                          <h3 class="text-base font-semibold text-gray-900 line-clamp-2 flex-1 mb-0">${wishlist.title}</h3>
                        </div>
                        <div class="flex items-center justify-between mt-2">
                          <span class="text-sm text-purple-600 font-medium">
                            ${wishlist.wishes_count || 0} ${(wishlist.wishes_count === 1) ? 'бажання' : 'бажань'}
                          </span>
                          <span class="text-xs text-gray-400">
                            ${new Date(wishlist.created_at).toLocaleDateString('uk-UA')}
                          </span>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>
              `).join('');
            }
          } catch (e) {
            console.error('Search error:', e);
          }
        }, 300);
      });
    });
  </script>

  <style>
    .line-clamp-4 {
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</body>

</html>